- content_for :title do
  = t('admin2.sidebar.users.user_fields')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.users.user_fields')

.content-card-section-container
  %section.content-card-section
    %h2= t('admin2.user_fields.info_text')
    .form-group
      .field-titles.user-fields
        %div= t('admin2.user_fields.field_title')
        %div= t('admin2.user_fields.field_type')
        %div= t('admin2.user_fields.sign_up')
        %div= t('admin2.user_fields.public')
        %div
      .list-group.user-fields-data
        = render 'fixed_fields'
        - if @service.show_custom_fields?
          %span#userCustomList{data: {url: order_admin2_users_user_fields_path}}
            = render partial: 'custom_fields', collection: @service.custom_fields, as: :custom_field
    %p.ingress
      = link_to t('admin2.user_fields.add_new_field'), '#', 'data-target' => '#userFieldsAddModal', 'data-toggle' => :modal

= render 'admin2/users/user_fields/add_popup'
